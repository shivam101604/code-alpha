import random

# Predefined list of 5 words
word_list = ["apple", "robot", "chair", "plane", "grape"]

# Choose a random word
secret_word = random.choice(word_list)
guessed_letters = []
tries = 6

# Create a display with underscores
display_word = ["_" for _ in secret_word]

print("🎮 Welcome to Hangman!")
print("Guess the word, one letter at a time.")
print(f"You have {tries} incorrect guesses allowed.\n")

# Game loop
while tries > 0 and "_" in display_word:
    print("Word:", " ".join(display_word))
    guess = input("Enter a letter: ").lower()

    if len(guess) != 1 or not guess.isalpha():
        print("⚠️ Please enter a single alphabetical letter.\n")
        continue

    if guess in guessed_letters:
        print("❗ You already guessed that letter.\n")
        continue

    guessed_letters.append(guess)

    if guess in secret_word:
        print("✅ Correct guess!\n")
        for i in range(len(secret_word)):
            if secret_word[i] == guess:
                display_word[i] = guess
    else:
        tries -= 1
        print(f"❌ Incorrect! You have {tries} tries left.\n")

# End game results
if "_" not in display_word:
    print("🎉 Congratulations! You guessed the word:", secret_word)
else:
    print("💀 Game over. The word was:", secret_word)
